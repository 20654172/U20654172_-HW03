@using U20654172_HW03.Models
@{
    ViewBag.Title = "Video";
}

<div class="row">
    <h1>Files of Type Video:</h1>
    <p class="lead">Here documets will be displayed from the /media/Videos folder</p>
</div>

<div class="row" style="background-color:aqua" ;>
    @foreach (FileModel video in Model)
    {
        <div class="row">
            <img src="@video.FileName" />
            <p>@video.FileName</p>

            <button class="btn btn-success">
                @Html.ActionLink("Download", "DownloadFile", new { fileName = video.FileName })
            </button>

            <button class="btn btn-danger">
                @Html.ActionLink("Delete", "DeleteFile", new { fileName = video.FileName },
                new { onclick = "return confirm('Are you sure you want to delete this?');" })
            </button>
        </div>
    }
</div>

