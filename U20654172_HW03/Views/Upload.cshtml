
@{
    ViewBag.Title = "Upload";
}

<div class="well-sm">
    <h2>Single file Upload</h2>
    <p>This is to upload files to the "App_Data/uploads/" folder</p>
</div>

<form>
    <label for="fname">First Name:</label><br />
    <input type="text" id="fname" name="fname" value="Jemma" /><br />
    <label for="lname">Last Name:</label><br />
    <input type="text" id="lname" name="lname" value="Davy" /><br />
    <input type="Submit" value="Submit" /><br />
</form>

<div class="well-sm">
    <div class="form-horizontal">
        @using (Html.BeginForm("Index", "FileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
         {
            <div><input type="file" name="files" /></div><br />
            <div><input type="submit" name="Upload" /></div><br />
         }

    </div>
    <br />
</div>

