@using U20654172_HW03.Models
@{
    ViewBag.Title = "Image";
}

<div class="row">
    <h1>Files of Type Image:</h1>
    <p class="lead">Here documets will be displayed from the /media/Images folder</p>
</div>

<div class="row" style="background-color:aqua";>
    @foreach (FileModel img in Model)
            {
                <div class="row">
                    <img src="@img.FileName" />
                    <p>@img.FileName</p>
                    
                    //button to download image files
                    <button class="btn btn-success">
                        @Html.ActionLink("Download","DownloadFile",new {fileName = img.FileName})
                    </button>

                    //button to download image files
                    <button class="btn btn-danger">
                        @Html.ActionLink("Delete","DeleteFile",new {fileName = img.FileName},
                        new { onclick = "return confirm('Are you sure you want to delete this?');" })
                    </button>
                </div>
            }
</div>
